@{


}
@model IEnumerable<Enrollment>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Learner" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create new learner
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    First name
                </th>
                <th>
                    Last name
                </th>
                <th>
                    EnrollmentDate
                </th>

                <th>
                    Major
                </th>

                <th>
                    Grades
                </th>

                <th>
                  Title crouse
                </th>

                <th>
                    Credits
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td >
                        @obj.Learner.LearnerID
                    </td>
                    <td >
                        @obj.Learner.FirstMidName
                    </td>
                    <td>
                        @obj.Learner.LastName
                    </td>
                    <td>
                        @obj.Learner.EnrollmentDate
                    </td>
                    <td>
                        @obj.Learner.MajorID
                    </td>

                    <td>
                        @obj.Grade
                    </td>

                    <td>
                        @obj.Course.Title
                    </td>

                    <td>
                        @obj.Course.Credits
                    </td>
                   
                    
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id=""
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id=""
                               class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

